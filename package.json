{
    "name": "yrp",
    "version": "1.0.1",
    "author": "Sophia <beyondthesophia@gmail.com>",
    "license": "MIT",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "jsnext:main": "dist.es2015/index.js",
    "module": "dist.es2015/index.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/ygoreplay/yrp.git"
    },
    "binary": {
        "napi_versions": [
            2,
            3
        ]
    },
    "scripts": {
        "install": "prebuild-install || npm run build",
        "dev": "rimraf dist/ dist.es2015/ && tsc --watch",
        "lint": "eslint \"src/**/*.ts\" --fix",
        "build": "rimraf dist/ dist.es2015/ && tsc && tsc -P tsconfig.es2015.json",
        "specs": "jest --coverage",
        "test": "npm run build && npm run lint && npm run specs",
        "prebuild:addons": "node-gyp configure",
        "build:addons": "node-gyp build",
        "prebuild": "npm run build:addons",
        "prepublishOnly": "npm run build",
        "start:dev": "ts-node src/test.ts",
        "semantic-release": "semantic-release"
    },
    "files": [
        "binding.gyp",
        "yarn.lock",
        "dist",
        "dist.es2015"
    ],
    "devDependencies": {
        "@semantic-release/commit-analyzer": "^8.0.1",
        "@semantic-release/git": "^9.0.0",
        "@semantic-release/github": "^7.2.0",
        "@semantic-release/npm": "^7.0.10",
        "@semantic-release/release-notes-generator": "^9.0.2",
        "@types/fs-extra": "^9.0.9",
        "@types/jest": "^26.0.22",
        "@types/node": "^14.14.37",
        "@typescript-eslint/eslint-plugin": "^4.19.0",
        "@typescript-eslint/parser": "^4.19.0",
        "eslint": "^7.23.0",
        "eslint-config-prettier": "^8.1.0",
        "jest": "^26.6.3",
        "node-gyp": "^7.1.2",
        "prettier": "^2.2.1",
        "segfault-handler": "^1.3.0",
        "semantic-release": "^17.4.2",
        "ts-jest": "^26.5.4",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.3"
    },
    "jest": {
        "roots": [
            "<rootDir>/src/"
        ],
        "transform": {
            "\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    },
    "dependencies": {
        "bindings": "^1.5.0",
        "fs-extra": "^9.1.0",
        "node-addon-api": "^3.1.0"
    }
}
