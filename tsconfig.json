{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es5"],
        "outDir": "dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "importHelpers": true,
        "declaration": true,
        "strict": true,
        "sourceMap": true,
        "inlineSources": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "types": ["node", "jest"],
        "rootDir": "src"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/test.ts"
    ]
}
